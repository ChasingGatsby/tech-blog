<div class="card">
  <div
    class="card-header custom-maincolor flex-row justify-space-between align-end"
  >
    <h2>{{title}}</h2>
    <h4>{{user.name}} on {{format_date date_created}}</h4>
  </div>
  <div class="p-2">
    <p>{{content}}</p>
    <button class="btn custom-btn">Fund this Project!</button>
  </div>
</div>
<div class="flex-column align-start">
<div class="card">
  {{#each comments as |comment|}}
    <div
      class="card-header custom-maincolor flex-row justify-space-between align-end"
    >
      <p>{{comment.user.name}} on {{format_date comment.date_created}}</p>
    </div>
    <div class="p-2">
      <p>{{comment.content}}</p>
    </div>
  {{/each}}
</div>
</div>