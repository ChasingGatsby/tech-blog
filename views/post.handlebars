<div class="card">
  <div
    class="card-header custom-maincolor flex-row justify-space-between align-end" data-id="{{post.id}}" id="post"
  >
    <h2>{{post.title}}</h2>
    <h4>{{post.user.name}} on {{format_date post.date_created}}</h4>
  </div>
  <div class="p-2">
    <p>{{post.content}}</p>

  </div>

</div>
{{#if logged_in}}
{{> comment}}
{{/if}}
<div class="flex-column align-start mt-2">
  <div class="card">
    {{#each post.comments as |comment|}}
      <div
        class="card-header custom-maincolor flex-row justify-space-between align-end"
      >
        <p class="pr-5">{{comment.user.name}}
          on
          {{format_date comment.date_created}}</p>
      </div>
      <div class="p-2">
        <p>{{comment.content}}</p>
      </div>
    {{/each}}
  </div>
</div>