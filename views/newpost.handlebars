<div class="col-md-6">
  <form>
    <h2>New Post</h2>
    <div class="form-group">
      <label>Title:</label>
      <input class="form-input" type="text" id="post-title" required />
    </div>
    <div class="form-group">
      <label>Content:</label>
      <div>
        <input
          class="form-textarea custom-textarea"
          type="text"
          id="post-content"
          placeholder="help me"
        />
      </div>
    </div>
    <button class="btn custom-btn" type="submit" id="newpost-btn">Create New
      Post</button>
  </form>
</div>

<script src="/js/newSubmit.js"></script>