{{#each userPosts as |post|}}
  <div class="card">
    <div
      class="card-header custom-maincolor flex-row justify-space-between align-end"
    >
      <h2>{{post.title}}</h2>
      <h4>{{format_date post.date_created}}</h4>
    </div>
    <div class="p-2">
      <p>{{post.content}}</p>
      <button class="btn custom-btn">Fund this Project!</button>
    </div>
  </div>
{{/each}}