<h2>Your Posts!</h2>
<div class="mb-5">
  <a href="/newpost">
    <button class="btn custom-btn">CREATE NEW POST</button>
  </a>
</div>
{{#each userPosts as |post|}}
  <div class="card">
    <div
      class="card-header custom-maincolor flex-row justify-space-between align-end"
    >
      <h2>{{post.title}}</h2>
      <h4>{{format_date post.date_created}}</h4>
    </div>
    <div class="p-2">
      <p>{{post.content}}</p>
      <a href="/post/{{post.id}}" class="mr-2"><button
          class="btn custom-btn"
          id="post-link"
          data-id="{{post.id}}"
        >See this Post!</button></a><a href="/post/{{post.id}}/update"><button class="btn custom-btn">Edit this
        Post!</button></a>
    </div>
  </div>
{{/each}}
